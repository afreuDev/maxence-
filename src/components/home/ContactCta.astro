---
const { instagram, email } = Astro.props;
---

<section class="relative mx-auto max-w-7xl px-4 py-12">
  <div class="rounded-2xl bg-gray-900 text-white dark:bg-white dark:text-gray-900 p-8 sm:p-10">
    <h2 class="text-2xl font-semibold">Presse & Partenariats</h2>
    <p class="mt-2 opacity-90">Disponible pour collaborations marques, contenus et interventions média.</p>
    <div class="mt-6 flex flex-wrap gap-3">
      {
        email && (
          <a
            href={email}
            class="inline-flex items-center rounded-xl px-5 py-3 font-medium bg-white text-gray-900 hover:bg-gray-100 transition dark:bg-gray-900 dark:text-white dark:hover:bg-gray-800"
          >
            Écrire
          </a>
        )
      }
      {
        instagram && (
          <a
            href={instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center rounded-xl px-5 py-3 font-medium bg-white/10 text-white ring-1 ring-white/30 hover:bg-white/15 transition dark:bg-gray-900 dark:text-white dark:ring-gray-700 dark:hover:bg-gray-800"
          >
            Instagram
          </a>
        )
      }
    </div>
  </div>
</section>
