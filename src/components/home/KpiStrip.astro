---
interface Props {
  kpis: { label: string; value: string }[];
}
const { kpis = [] } = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <ul class="mx-auto max-w-7xl px-4 py-8 grid grid-cols-2 sm:grid-cols-4 gap-4">
    {
      kpis.map((k) => (
        <li class="rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
          <p class="text-3xl font-semibold">{k.value}</p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{k.label}</p>
        </li>
      ))
    }
  </ul>
</section>
