---
const { kpis = [] } = Astro.props; // [{label, value, sub?}]
const items = kpis.slice(0, 3);
---
{items.length > 0 && (
<section class="bg-white dark:bg-gray-900">
  <ul class="mx-auto max-w-7xl px-4 py-8 grid grid-cols-1 sm:grid-cols-3 gap-4">
    {items.map((k) => (
      <li class="rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
        <p class="text-3xl font-semibold">{k.value}</p>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{k.label}</p>
        {k.sub && <p class="mt-1 text-xs text-gray-400">{k.sub}</p>}
      </li>
    ))}
  </ul>
</section>
)}
