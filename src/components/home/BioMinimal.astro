---
/**
 * "À propos" section: Intro + Quote
 */
const { data } = Astro.props;
const { intro, quote, quoteAuthor } = data?.bio ?? {};
---

<section id="a-propos" class="py-16 sm:py-20">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

    {intro && <p class="text-lg md:text-xl leading-relaxed text-default">{intro}</p>}

    {
      quote && (
        <figure class="mt-10">
          <blockquote class="text-2xl md:text-3xl font-light italic text-muted">
            “{quote}”
          </blockquote>
          {quoteAuthor && <figcaption class="mt-4 text-base text-muted">— {quoteAuthor}</figcaption>}
        </figure>
      )
    }
  </div>
</section>
