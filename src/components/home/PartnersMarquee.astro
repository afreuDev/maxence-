---
interface Props {
  items: { name: string; logo: string; url: string }[];
}
const { items = [] } = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <ul class="mx-auto max-w-7xl px-4 py-10 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-6">
    {
      items.map((p) => (
        <li class="flex items-center justify-center">
          <a href={p.url} target="_blank" rel="noopener noreferrer" class="opacity-70 hover:opacity-100 transition">
            <img src={p.logo} alt={p.name} class="h-10" />
          </a>
        </li>
      ))
    }
  </ul>
</section>
