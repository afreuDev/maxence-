---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/700.css';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    /* Simple Black/White Palette (Light) */
    --aw-color-primary: rgb(20 20 20); /* Near Black */
    --aw-color-secondary: rgb(50 50 50); /* Dark Gray */
    --aw-color-accent: rgb(100 100 100); /* Gray */

    --aw-color-text-heading: rgb(20 20 20); /* Near Black */
    --aw-color-text-default: rgb(42 42 42);
    --aw-color-text-muted: rgb(42 42 42 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    ::selection {
      background-color: rgba(20, 20, 20, 0.1);
    }
  }

  .dark {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    /* Simple Black/White Palette (Dark) */
    --aw-color-primary: rgb(230 230 230); /* Near White */
    --aw-color-secondary: rgb(200 200 200); /* Light Gray */
    --aw-color-accent: rgb(150 150 150); /* Gray */

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(20 20 20); /* Near Black */

    ::selection {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
