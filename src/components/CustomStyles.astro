---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/700.css';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    /* New Palette */
    --aw-color-primary: rgb(11 11 11); /* #0B0B0B */
    --aw-color-secondary: rgb(154 154 154); /* #9A9A9A */
    --aw-color-accent: rgb(169 29 58); /* #A91D3A - Deep Red */

    --aw-color-text-heading: rgb(11 11 11); /* #0B0B0B */
    --aw-color-text-default: rgb(11 11 11); /* #0B0B0B */
    --aw-color-text-muted: rgb(154 154 154); /* #9A9A9A */

    --aw-color-bg-page: rgb(255 255 255); /* #FFFFFF */
    --aw-color-bg-page-light: rgb(246 246 246); /* #F6F6F6 */
    --aw-color-bg-page-lighter: rgb(237 237 237); /* #EDEDED */
    --aw-color-bg-header: rgba(11, 11, 11, 0.8);
    --aw-color-bg-mobile-menu: rgba(11, 11, 11, 0.95);

    ::selection {
      background-color: rgba(169, 29, 58, 0.1);
    }
  }

  /* Dark mode is not part of the design spec, but we'll keep it for consistency */
  .dark {
    --aw-color-primary: rgb(255 255 255);
    --aw-color-secondary: rgb(154 154 154);
    --aw-color-accent: rgb(169 29 58);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(237 237 237);
    --aw-color-text-muted: rgb(154 154 154);

    --aw-color-bg-page: rgb(11 11 11);
    --aw-color-bg-page-light: rgb(20 20 20);
    --aw-color-bg-page-lighter: rgb(30 30 30);

    ::selection {
      background-color: rgba(169, 29, 58, 0.2);
    }
  }
</style>
