---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/700.css';
import '@fontsource/bebas-neue/400.css';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Bebas Neue', sans-serif;

    /* Sport Chic Palette (Light) */
    --aw-color-primary: rgb(20 30 54); /* Navy Blue */
    --aw-color-secondary: rgb(67 83 117); /* Lighter Blue */
    --aw-color-accent: rgb(255 215 0); /* Gold/Yellow */

    --aw-color-text-heading: rgb(20 30 54); /* Navy Blue */
    --aw-color-text-default: rgb(42 42 42);
    --aw-color-text-muted: rgb(42 42 42 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(20 30 54);

    ::selection {
      background-color: rgba(255, 215, 0, 0.5);
    }
  }

  .dark {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Bebas Neue', sans-serif;

    /* Sport Chic Palette (Dark) */
    --aw-color-primary: rgb(255 255 255); /* White */
    --aw-color-secondary: rgb(200 200 200); /* Light Gray */
    --aw-color-accent: rgb(255 215 0); /* Gold/Yellow */

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(20 30 54); /* Navy Blue */

    ::selection {
      background-color: rgba(255, 215, 0, 0.5);
      color: #000;
    }
  }
</style>
