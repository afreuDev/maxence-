---
import type { CallToAction } from '~/types';
import Button from '~/components/ui/Button.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  actions = [],
  image,
} = Astro.props;
---

<section class="relative not-prose h-screen">
  <div class="absolute inset-0">
    {
      image && (
        <img
          src={typeof image.src === 'string' ? image.src : image.src.src}
          alt={image.alt || ''}
          class="object-cover w-full h-full"
          loading="eager"
          fetchpriority="high"
        />
      )
    }
  </div>
  <div class="absolute inset-0 bg-primary/60"></div>

  <div class="relative h-screen min-h-[500px] max-h-[800px] flex items-center justify-center">
    <div class="max-w-3xl mx-auto text-center p-6">
      {
        title && (
          <h1
            class="text-5xl md:text-6xl lg:text-7xl font-bold text-white [text-wrap:balance] uppercase"
            set:html={title}
          />
        )
      }
      {
        subtitle && (
          <p class="mt-4 text-lg md:text-xl text-white/80 max-w-2xl mx-auto" set:html={subtitle} />
        )
      }
      {
        Array.isArray(actions) && actions.length > 0 && (
          <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
            {actions.map((action: CallToAction) => (
              <Button {...action} />
            ))}
          </div>
        )
      }
    </div>
  </div>
</section>
