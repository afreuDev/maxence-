---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const { partners } = Astro.props;

const images = partners.map((partner: { name: string; logo: string; url: string }) => ({
  src: partner.logo,
  alt: partner.name,
  href: partner.url,
}));
---

<WidgetWrapper>
  <Headline>
    <Fragment slot="title">Partenaires</Fragment>
    <Fragment slot="subtitle">Merci pour la confiance.</Fragment>
  </Headline>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8">
    {
      images.map(({ src, alt, href }) => (
        <a
          href={href}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center grayscale hover:grayscale-0 transition-all duration-300 ease-in-out transform hover:scale-105"
        >
          <img src={src} alt={alt} class="h-12 w-auto" />
        </a>
      ))
    }
  </div>
</WidgetWrapper>
